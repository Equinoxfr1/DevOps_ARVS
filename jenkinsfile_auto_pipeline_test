pipeline {
    agent any
    stages {
        stage('Get Issues') {
            steps {
                script {
                    def response = httpRequest url: 'https://api.github.com/repos/Equinoxfr1/DevOps_ARVS/issues'
                    def issues = readJSON text: response.content
                    issues.each { issue ->
                        stage("Issue: ${issue.title}") {
                            echo "Processing issue: ${issue.title}"
                        }
                    }
                }
            }
        }
    }
}
