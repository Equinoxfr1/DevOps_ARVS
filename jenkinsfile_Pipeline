def checkMonthlyObjectives(String month, String day) {
    if (day == null || day.isEmpty()) {
        echo "Le jour est invalide."
        return
    }

    def dayInt = day.toInteger()
    def daysInMonth = [JANVIER: 31, FEVRIER: 28, MARS: 31, AVRIL: 30, MAI: 31, JUIN: 30, JUILLET: 31, AOUT: 31, SEPTEMBRE: 30, OCTOBRE: 31, NOVEMBRE: 30, DECEMBRE: 31]

    // V√©rifier si le mois actuel correspond au mois pass√© en param√®tre
    if (month.toUpperCase() == new Date().format('MMMM').toUpperCase()) {
        echo "Vous avez des nouveaux objectifs pour ce mois-ci ! Voici la liste : "
        switch (month.toUpperCase()) {
            case 'JANVIER':
                echo "- Choisir une pi√®ce de la maison √† d√©molir"
                echo "- Identifier les lignes de bus √† proximit√©"
                echo "- Promouvoir la construction aupr√®s de ses camarades de classe"
                echo "- Arr√™ter de faire du covoiturage"
                break
            case 'FEVRIER':
                echo "- Ajouter une adresse IP sur le switch"
                echo "- Oublier sa cl√© USB"
                echo "- Changer l'adresse MAC du routeur"
                echo "- Se garer sur le terre-plein"
                echo "- Aller chercher sa s≈ìur √† la maternelle tous les lundis"
                break
            case 'MARS':
                echo "- V√©rifier l'√©tat du lit"
                echo "- Remplacer les lattes du lit"
                echo "- Consolider les embouts de lattes"
                echo "- Mettre un matelas plus l√©ger sur le lit"
                break
            case 'AVRIL':
                echo "- Installer le framework Qt sur son poste"
                echo "- Suivre les √©tapes du TP CCourbes"
                echo "- R√©diger le compte-rendu sur un document Libre Office Writer"
                echo "- Corriger les fautes d'orthographe avec Antidote"
                echo "- Utiliser ChatGPT 2.0 pour s'aider dans la r√©daction"
                echo "- Travailler en groupe de 3 personnes"
                echo "- Respecter la deadline de une semaine apr√®s la fin du module"
                break
            case 'MAI':
                echo "- Assister √† la pr√©sentation de l'ATS"
                echo "- Obtenir son BTS avec 16+ de moyenne"
                echo "- R√©unir et envoyer les documents au centre de formation"
                break
            case 'JUIN':
                echo "- Installer ESXi VMWare sur un disque virtuel RAID 5"
                echo "- Installer l'iso pr√©configur√© de CentOS 7"
                echo "- Configurer CentOS 7 pour les switchs HP"
                echo "- Faire du cartage du r√©seau informatique"
                break
            case 'JUILLET':
                echo "- Rechercher une √©cole pour un but MMI"
                echo "- Arr√™ter sa formation actuelle avant les √©preuves finales"
                echo "- Rechercher une entreprise pour son alternance"
                break
            case 'AOUT':
                echo "- Pr√©parer sa valise"
                echo "- R√©server le lieu d'h√©bergement √† Grigny"
                echo "- S'assurer d'avoir un portable et des chaussures de rechange"
                echo "- Planifier son trajet pour √©viter les coins dits 'chauds'"
                break
            case 'SEPTEMBRE':
                echo "- D√©finir les besoins et contraintes du projet"
                echo "- √âtablir un budget et un plan de conception"
                echo "- Planifier les travaux et la mise en service"
                echo "- Mettre 0000 en code de l'√©cran"
                break
            case 'OCTOBRE':
                echo "- Analyser les conditions m√©t√©orologiques et la route optimale"
                echo "- Optimiser les r√©glages du bateau et la gestion du temps"
                echo "- Surveiller et ajuster la strat√©gie en temps r√©el"
                break
            case 'NOVEMBRE':
                echo "- Demander aux √©tudiants de venir"
                echo "- Pr√©parer l'amphith√©√¢tre pour la remise des dipl√¥mes"
                echo "- Oublier les dipl√¥mes en format papier"
                break
            case 'DECEMBRE':
                echo "- Planifier des r√©visions"
                echo "- S'inscrire √† une session de TOEIC"
                echo "- Faire des tests blancs"
                break
        }
        if (dayInt >= 16 && dayInt <= 31) {
            def remainingDays = daysInMonth[month.toUpperCase()] - dayInt
            echo "Il ne vous reste que ${remainingDays} jours pour accomplir vos objectifs. Courage üí™!"
        }
    }
}

def checkIssueStatus(String issueNumber) {
    def response = httpRequest(
        url: "https://api.github.com/repos/${REPO_OWNER}/${REPO_NAME}/issues/${issueNumber}",
        httpMode: 'GET',
        validResponseCodes: '200,403', // Accepter les codes 200 et 403
        customHeaders: [[name: 'Authorization', value: "token YOUR_PERSONAL_ACCESS_TOKEN"]]
    )

    if (response.status == 200) {
        def issue = new groovy.json.JsonSlurper().parseText(response.content)
        if (issue.state == 'closed') {
            echo "L'issue ${issueNumber} est ferm√©e."
        } else {
            echo "L'issue ${issueNumber} est toujours ouverte."
        }
    } else if (response.status == 403) {
        echo "Donn√©e indisponible pour l'issue ${issueNumber}. Veuillez v√©rifier les permissions ou r√©essayer plus tard."
    }
}
