def checkMonthlyObjectives(String month, String day) {
    if (day == null || day.isEmpty()) {
        echo "Le jour est invalide."
        return
    }

    def dayInt = day.toInteger()
    def daysInMonth = [JANVIER: 31, FEVRIER: 28, MARS: 31, AVRIL: 30, MAI: 31, JUIN: 30, JUILLET: 31, AOUT: 31, SEPTEMBRE: 30, OCTOBRE: 31, NOVEMBRE: 30, DECEMBRE: 31]

    // VÃ©rifier si le mois actuel correspond au mois passÃ© en paramÃ¨tre
    if (month.toUpperCase() == new Date().format('MMMM').toUpperCase()) {
        echo "Vous avez des nouveaux objectifs pour ce mois-ci ! Voici la liste : "
        switch (month.toUpperCase()) {
            case 'JANVIER':
                echo "- Choisir une piÃ¨ce de la maison Ã  dÃ©molir"
                echo "- Identifier les lignes de bus Ã  proximitÃ©"
                echo "- Promouvoir la construction auprÃ¨s de ses camarades de classe"
                echo "- ArrÃªter de faire du covoiturage"
                break
            case 'FEVRIER':
                echo "- Ajouter une adresse IP sur le switch"
                echo "- Oublier sa clÃ© USB"
                echo "- Changer l'adresse MAC du routeur"
                echo "- Se garer sur le terre-plein"
                echo "- Aller chercher sa sÅ“ur Ã  la maternelle tous les lundis"
                break
            case 'MARS':
                echo "- VÃ©rifier l'Ã©tat du lit"
                echo "- Remplacer les lattes du lit"
                echo "- Consolider les embouts de lattes"
                echo "- Mettre un matelas plus lÃ©ger sur le lit"
                break
            case 'AVRIL':
                echo "- Installer le framework Qt sur son poste"
                echo "- Suivre les Ã©tapes du TP CCourbes"
                echo "- RÃ©diger le compte-rendu sur un document Libre Office Writer"
                echo "- Corriger les fautes d'orthographe avec Antidote"
                echo "- Utiliser ChatGPT 2.0 pour s'aider dans la rÃ©daction"
                echo "- Travailler en groupe de 3 personnes"
                echo "- Respecter la deadline de une semaine aprÃ¨s la fin du module"
                break
            case 'MAI':
                echo "- Assister Ã  la prÃ©sentation de l'ATS"
                echo "- Obtenir son BTS avec 16+ de moyenne"
                echo "- RÃ©unir et envoyer les documents au centre de formation"
                break
            case 'JUIN':
                echo "- Installer ESXi VMWare sur un disque virtuel RAID 5"
                echo "- Installer l'iso prÃ©configurÃ© de CentOS 7"
                echo "- Configurer CentOS 7 pour les switchs HP"
